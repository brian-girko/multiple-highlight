{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Multiple Highlight",
  "description": "Highlight multiple words separated by comma, space or arbitrary separator with regular expression support",
  "permissions": [
    "storage",
    "activeTab"
   ],
   "background": {
    "persistant": false,
    "scripts": [
      "app.js/base.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "data/popup/index.html"
  },
  "offline_enabled": true,
  "icons": {
    "512": "data/icons/512.png",
    "256": "data/icons/256.png",
    "128": "data/icons/128.png",
    "64": "data/icons/64.png",
    "38": "data/icons/38.png",
    "32": "data/icons/32.png",
    "19": "data/icons/19.png",
    "16": "data/icons/16.png"
  }
}
